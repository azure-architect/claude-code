{
  "permissions": {
    "allow": [
      "Bash(black *)",
      "Bash(pytest *)",
      "Bash(mypy *)",
      "Bash(pylint *)",
      "Bash(isort *)",
      "Bash(docker *)",
      "Bash(mkdir -p *)",
      "Bash(touch *)",
      "Bash(git *)"
    ],
    "additionalDirectories": [
      "./docs/tasks/"
    ]
  },
  "env": {
    "PYTHONPATH": "${PYTHONPATH}:${PWD}/src"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/pre_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/post_tool_use.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/stop.py"
          }
        ]
      }
    ]
  }
}